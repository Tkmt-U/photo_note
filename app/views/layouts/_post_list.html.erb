<% photos.each do |photo| %>
  <%= link_to photo_path(photo.id) do %>
    <%= attachment_image_tag photo, :image, size: '640x455' %>
  <% end %>
  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(photo.user_id), data: {"turbolinks" => false} do %>
          <%= photo.user.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to photo_path(photo.id) do %>
          <%= photo.title %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        タグ：
        <% photo.tags.each do |tag| %>
          <%= link_to tag_path(tag), data: {"turbolinks" => false} do %>
            <%= tag.name %>
          <% end %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= render 'favorites/favorite', photo: photo %><!--お気に入り機能の部分テンプレート-->
      </td>
    </tr>
  </table>
<% end %>