<div class="col-xs-1"></div><!--左の余白生成用タグ-->
<div class="col-xs-7 col-xs-offset-2">
  <!-- 以下フラッシュメッセージ-->
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  <!-- フラッシュメッセージここまで-->

  <%= attachment_image_tag @photo, :image, :fill, 640, 455 %>
  <table class="table">
    <tr>
      <td>投稿者</td>
      <td><%= @photo.user.name %></td>
    </tr>
    <tr>
      <td>タイトル</td>
      <td><%= @photo.title %></td>
    </tr>
    <tr>
      <td>機材名</td>
      <td><%= @photo.camera %></td>
    </tr>
    <tr>
      <td>レンズ名</td>
      <td><%= @photo.lens %></td>
    </tr>
    <tr>
      <td>シャッタースピード</td>
      <td><%= @photo.shutter_speed %></td>
    </tr>
    <tr>
      <td>F値</td>
      <td><%= @photo.f_value %></td>
    </tr>
    <tr>
      <td>ISO感度</td>
      <td><%= @photo.iso %></td>
    </tr>
    <tr>
      <td>使用アイテム<br>(減光フィルターや三脚など)</td>
      <td><%= @photo.item %></td>
    </tr>
    <tr>
      <td>コメント</td>
      <td><%= @photo.comment %></td>
    </tr>
  </table>

  <% if @photo.user == current_user %>
    <div class="col-xs-2 col-xs-offset-2">
      <%= link_to "編集する", edit_photo_path(@photo.id), class: 'btn btn-primary' %>
    </div>
    <div class="col-xs-2 col-xs-offset-4">
      <%= link_to "削除する", photo_path(@photo.id), method: :delete, date: {confirm: "本当に削除してよろしいですか？"}, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>