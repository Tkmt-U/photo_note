<div class="col-xs-1"></div><!--左の余白生成用タグ-->
<%= form_with model:@user, local: true do |f| %>

  <!-- 以下エラーメッセージ表示-->
  <% if @user.errors.any? %>
    <p><%= @user.errors.count %>件のエラーが発生しました。</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <!-- エラーメッセージ表示ここまで-->

  <div class="col-xs-5 col-xs-offset-3">
    <h2>登録情報編集</h2>
    <%= attachment_image_tag @user, :profile_image, size:'200x200', fallback: "no_image_messeage.png" %>
    <%= f.attachment_field :profile_image %>
    <table class="table">
      <tr>
        <td>名前</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>自己紹介</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
    </table>
    <%= f.submit "保存する" %>
  </div>
<% end %>